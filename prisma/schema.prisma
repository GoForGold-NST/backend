generator client {
    provider = "prisma-client-js"
    output   = "./generated/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String  @id @default(uuid())
    fullName String
    email    String  @unique
    password String?
    IOI      IOI[]
}

model IOI {
    id                   String @id @default(uuid())
    user                 User   @relation(fields: [email], references: [email])
    email                String
    candidateContact     Int
    candidateAdhaar      Int
    schoolName           String
    city                 String
    Grade                Int
    codeforcesUsername   String
    codeforcesRating     Int
    codechefUsername     String
    codechefRating       Int
    participationHistory bool
    CPAchievements       String
    chennaiParticipation bool
    volunteerInterest    bool
    campInterest         String
    guardianName         String
    guardianContact      Int
    guardianEmail        String
    TShirtSize           String
    allergies            String
    paymentMade          paymentStatus   @default(pending)
}

enum paymentStatus {
    pending
    success
}

enum bool {
    YES
    NO
}
